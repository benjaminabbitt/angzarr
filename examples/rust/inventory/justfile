# Inventory Business Logic - Rust gRPC Server

set shell := ["bash", "-c"]

TOP := `git rev-parse --show-toplevel`

default:
    @just --list

build:
    cargo build -p inventory --bin inventory-server

build-release:
    cargo build -p inventory --bin inventory-server --release

run: build
    cargo run -p inventory --bin inventory-server

run-port port:
    PORT={{port}} cargo run -p inventory --bin inventory-server

copy-features:
    rm -rf tests/features
    cp -r {{TOP}}/examples/features tests/

unit:
    cargo test -p inventory --lib

acceptance: copy-features
    cargo test -p inventory --test acceptance

test: unit acceptance

test-unit: unit

clean:
    cargo clean -p inventory

check:
    cargo check -p inventory

lint:
    cargo clippy -p inventory -- -D warnings
