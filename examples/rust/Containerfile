# syntax=docker/dockerfile:1.4
# Rust example images - unified dev/release build
#
# Dev (fast):     podman build --target order-dev -t aggregate-order-rs -f examples/rust/Containerfile .
# Release (slow): podman build --target order -t aggregate-order-rs -f examples/rust/Containerfile .
#
# Dev uses native glibc target + debian runtime (no cross-compilation)
# Release uses musl static target + scratch runtime (smallest images)

# =============================================================================
# Dev builder - native glibc (fast compilation)
# =============================================================================
FROM docker.io/library/rust:1.92-bookworm AS builder-dev

RUN apt-get update && apt-get install -y --no-install-recommends \
    protobuf-compiler \
    libprotobuf-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY Cargo.toml Cargo.lock build.rs ./
COPY proto/ ./proto/
COPY src/ ./src/
COPY angzarr-client/ ./angzarr-client/
COPY examples/rust examples/rust/

RUN mkdir -p tests/integration && \
    for f in acceptance container_integration mongodb_debug \
             storage_mongodb storage_redis storage_postgres storage_sqlite \
             standalone_integration; do \
      echo "fn main() {}" > tests/$f.rs; \
    done && \
    for f in gateway_test streaming_test query_test; do \
      echo "fn main() {}" > tests/integration/$f.rs; \
    done

RUN --mount=type=cache,target=/usr/local/cargo/registry \
    --mount=type=cache,target=/usr/local/cargo/git \
    --mount=type=cache,id=examples-target,target=/app/target \
    cargo build --profile container-dev \
    -p order --bin order-server \
    -p inventory-svc --bin inventory-server \
    -p fulfillment --bin fulfillment-server \
    -p saga-order-fulfillment --bin saga-order-fulfillment-server \
    -p saga-order-inventory --bin saga-order-inventory-server \
    -p saga-fulfillment-inventory --bin saga-fulfillment-inventory-server \
    -p process-manager-fulfillment --bin process-manager-fulfillment-server \
    -p projector-inventory --bin projector-inventory-server && \
    cp target/container-dev/*-server /tmp/

# =============================================================================
# Release builder - musl static (small images)
# =============================================================================
FROM docker.io/library/rust:1.92-alpine AS builder-release

RUN apk add --no-cache \
    musl-dev \
    protobuf-dev \
    protoc \
    openssl-dev \
    openssl-libs-static \
    pkgconfig

RUN rustup target add x86_64-unknown-linux-musl

ENV RUSTFLAGS="-C target-feature=+crt-static"
ENV OPENSSL_STATIC=1
ENV OPENSSL_DIR=/usr

WORKDIR /app

COPY Cargo.toml Cargo.lock build.rs ./
COPY proto/ ./proto/
COPY src/ ./src/
COPY angzarr-client/ ./angzarr-client/
COPY examples/rust examples/rust/

RUN mkdir -p tests/integration && \
    for f in acceptance container_integration mongodb_debug \
             storage_mongodb storage_redis storage_postgres storage_sqlite \
             standalone_integration; do \
      echo "fn main() {}" > tests/$f.rs; \
    done && \
    for f in gateway_test streaming_test query_test; do \
      echo "fn main() {}" > tests/integration/$f.rs; \
    done

RUN --mount=type=cache,target=/usr/local/cargo/registry \
    --mount=type=cache,target=/usr/local/cargo/git \
    cargo build --release --target x86_64-unknown-linux-musl \
    -p order --bin order-server \
    -p inventory-svc --bin inventory-server \
    -p fulfillment --bin fulfillment-server \
    -p saga-order-fulfillment --bin saga-order-fulfillment-server \
    -p saga-order-inventory --bin saga-order-inventory-server \
    -p saga-fulfillment-inventory --bin saga-fulfillment-inventory-server \
    -p process-manager-fulfillment --bin process-manager-fulfillment-server \
    -p projector-inventory --bin projector-inventory-server && \
    cp target/x86_64-unknown-linux-musl/release/*-server /tmp/

# =============================================================================
# Runtime bases
# =============================================================================
FROM docker.io/library/debian:bookworm-slim AS runtime-dev-base
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    gdb \
    gdbserver \
    && rm -rf /var/lib/apt/lists/*
WORKDIR /app

FROM scratch AS runtime-release-base
WORKDIR /app

# =============================================================================
# Dev images - Domain Aggregates
# =============================================================================
FROM runtime-dev-base AS order-dev
COPY --from=builder-dev /tmp/order-server ./server
ENV PORT=50083
EXPOSE 50083
ENTRYPOINT ["./server"]

FROM runtime-dev-base AS inventory-dev
COPY --from=builder-dev /tmp/inventory-server ./server
ENV PORT=50073
EXPOSE 50073
ENTRYPOINT ["./server"]

FROM runtime-dev-base AS fulfillment-dev
COPY --from=builder-dev /tmp/fulfillment-server ./server
ENV PORT=50103
EXPOSE 50103
ENTRYPOINT ["./server"]

# =============================================================================
# Dev images - Sagas
# =============================================================================
FROM runtime-dev-base AS saga-order-fulfillment-dev
COPY --from=builder-dev /tmp/saga-order-fulfillment-server ./server
ENV PORT=50123
EXPOSE 50123
ENTRYPOINT ["./server"]

FROM runtime-dev-base AS saga-order-inventory-dev
COPY --from=builder-dev /tmp/saga-order-inventory-server ./server
ENV PORT=50153
EXPOSE 50153
ENTRYPOINT ["./server"]

FROM runtime-dev-base AS saga-fulfillment-inventory-dev
COPY --from=builder-dev /tmp/saga-fulfillment-inventory-server ./server
ENV PORT=50127
EXPOSE 50127
ENTRYPOINT ["./server"]

# =============================================================================
# Dev images - Process Managers
# =============================================================================
FROM runtime-dev-base AS process-manager-fulfillment-dev
COPY --from=builder-dev /tmp/process-manager-fulfillment-server ./server
ENV PORT=50163
EXPOSE 50163
ENTRYPOINT ["./server"]

# =============================================================================
# Dev images - Projectors
# =============================================================================
FROM runtime-dev-base AS projector-inventory-dev
COPY --from=builder-dev /tmp/projector-inventory-server ./server
ENV PORT=50183
EXPOSE 50183
ENTRYPOINT ["./server"]

# =============================================================================
# Release images - Domain Aggregates
# =============================================================================
FROM runtime-release-base AS order
COPY --from=builder-release /tmp/order-server ./server
ENV PORT=50083
EXPOSE 50083
ENTRYPOINT ["./server"]

FROM runtime-release-base AS inventory
COPY --from=builder-release /tmp/inventory-server ./server
ENV PORT=50073
EXPOSE 50073
ENTRYPOINT ["./server"]

FROM runtime-release-base AS fulfillment
COPY --from=builder-release /tmp/fulfillment-server ./server
ENV PORT=50103
EXPOSE 50103
ENTRYPOINT ["./server"]

# =============================================================================
# Release images - Sagas
# =============================================================================
FROM runtime-release-base AS saga-order-fulfillment
COPY --from=builder-release /tmp/saga-order-fulfillment-server ./server
ENV PORT=50123
EXPOSE 50123
ENTRYPOINT ["./server"]

FROM runtime-release-base AS saga-order-inventory
COPY --from=builder-release /tmp/saga-order-inventory-server ./server
ENV PORT=50153
EXPOSE 50153
ENTRYPOINT ["./server"]

FROM runtime-release-base AS saga-fulfillment-inventory
COPY --from=builder-release /tmp/saga-fulfillment-inventory-server ./server
ENV PORT=50127
EXPOSE 50127
ENTRYPOINT ["./server"]

# =============================================================================
# Release images - Process Managers
# =============================================================================
FROM runtime-release-base AS process-manager-fulfillment
COPY --from=builder-release /tmp/process-manager-fulfillment-server ./server
ENV PORT=50163
EXPOSE 50163
ENTRYPOINT ["./server"]

# =============================================================================
# Release images - Projectors
# =============================================================================
FROM runtime-release-base AS projector-inventory
COPY --from=builder-release /tmp/projector-inventory-server ./server
ENV PORT=50183
EXPOSE 50183
ENTRYPOINT ["./server"]
