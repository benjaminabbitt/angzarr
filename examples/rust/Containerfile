# syntax=docker/dockerfile:1.4
# Rust example images - unified dev/release build
#
# Dev (fast):     podman build --target customer-dev -t aggregate-customer-rs -f examples/rust/Containerfile .
# Release (slow): podman build --target customer -t aggregate-customer-rs -f examples/rust/Containerfile .
#
# Dev uses native glibc target + debian runtime (no cross-compilation)
# Release uses musl static target + scratch runtime (smallest images)

# =============================================================================
# Dev builder - native glibc (fast compilation)
# =============================================================================
FROM docker.io/library/rust:1.92-bookworm AS builder-dev

RUN apt-get update && apt-get install -y --no-install-recommends \
    protobuf-compiler \
    libprotobuf-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY Cargo.toml Cargo.lock build.rs ./
COPY proto/ ./proto/
COPY src/ ./src/
COPY examples/rust examples/rust/

RUN mkdir -p tests && echo "fn main() {}" > tests/acceptance.rs && \
    echo "fn main() {}" > tests/container_integration.rs && \
    echo "fn main() {}" > tests/mongodb_debug.rs

RUN --mount=type=cache,target=/usr/local/cargo/registry \
    --mount=type=cache,target=/usr/local/cargo/git \
    --mount=type=cache,target=/app/target \
    cargo build --profile container-dev \
    -p customer --bin customer-server \
    -p product --bin product-server \
    -p inventory@0.1.0 --bin inventory-server \
    -p order --bin order-server \
    -p cart --bin cart-server \
    -p fulfillment --bin fulfillment-server \
    -p saga-loyalty-earn --bin saga-loyalty-earn-server \
    -p saga-fulfillment --bin saga-fulfillment-server \
    -p saga-cancellation --bin saga-cancellation-server && \
    cp target/container-dev/*-server /tmp/

# =============================================================================
# Release builder - musl static (small images)
# =============================================================================
FROM docker.io/library/rust:1.92-alpine AS builder-release

RUN apk add --no-cache \
    musl-dev \
    protobuf-dev \
    protoc \
    openssl-dev \
    openssl-libs-static \
    pkgconfig

RUN rustup target add x86_64-unknown-linux-musl

ENV RUSTFLAGS="-C target-feature=+crt-static"
ENV OPENSSL_STATIC=1
ENV OPENSSL_DIR=/usr

WORKDIR /app

COPY Cargo.toml Cargo.lock build.rs ./
COPY proto/ ./proto/
COPY src/ ./src/
COPY examples/rust examples/rust/

RUN mkdir -p tests && echo "fn main() {}" > tests/acceptance.rs && \
    echo "fn main() {}" > tests/container_integration.rs && \
    echo "fn main() {}" > tests/mongodb_debug.rs

RUN --mount=type=cache,target=/usr/local/cargo/registry \
    --mount=type=cache,target=/usr/local/cargo/git \
    cargo build --release --target x86_64-unknown-linux-musl \
    -p customer --bin customer-server \
    -p product --bin product-server \
    -p inventory@0.1.0 --bin inventory-server \
    -p order --bin order-server \
    -p cart --bin cart-server \
    -p fulfillment --bin fulfillment-server \
    -p saga-loyalty-earn --bin saga-loyalty-earn-server \
    -p saga-fulfillment --bin saga-fulfillment-server \
    -p saga-cancellation --bin saga-cancellation-server && \
    cp target/x86_64-unknown-linux-musl/release/*-server /tmp/

# =============================================================================
# Runtime bases
# =============================================================================
FROM docker.io/library/debian:bookworm-slim AS runtime-dev-base
RUN apt-get update && apt-get install -y --no-install-recommends ca-certificates && rm -rf /var/lib/apt/lists/*
WORKDIR /app

FROM scratch AS runtime-release-base
WORKDIR /app

# =============================================================================
# Dev images - Domain Aggregates
# =============================================================================
FROM runtime-dev-base AS customer-dev
COPY --from=builder-dev /tmp/customer-server ./server
ENV PORT=50055
EXPOSE 50055
ENTRYPOINT ["./server"]

FROM runtime-dev-base AS product-dev
COPY --from=builder-dev /tmp/product-server ./server
ENV PORT=50053
EXPOSE 50053
ENTRYPOINT ["./server"]

FROM runtime-dev-base AS inventory-dev
COPY --from=builder-dev /tmp/inventory-server ./server
ENV PORT=50054
EXPOSE 50054
ENTRYPOINT ["./server"]

FROM runtime-dev-base AS order-dev
COPY --from=builder-dev /tmp/order-server ./server
ENV PORT=50056
EXPOSE 50056
ENTRYPOINT ["./server"]

FROM runtime-dev-base AS cart-dev
COPY --from=builder-dev /tmp/cart-server ./server
ENV PORT=50057
EXPOSE 50057
ENTRYPOINT ["./server"]

FROM runtime-dev-base AS fulfillment-dev
COPY --from=builder-dev /tmp/fulfillment-server ./server
ENV PORT=50058
EXPOSE 50058
ENTRYPOINT ["./server"]

# =============================================================================
# Dev images - Sagas
# =============================================================================
FROM runtime-dev-base AS saga-loyalty-earn-dev
COPY --from=builder-dev /tmp/saga-loyalty-earn-server ./server
ENV PORT=50060
EXPOSE 50060
ENTRYPOINT ["./server"]

FROM runtime-dev-base AS saga-fulfillment-dev
COPY --from=builder-dev /tmp/saga-fulfillment-server ./server
ENV PORT=50061
EXPOSE 50061
ENTRYPOINT ["./server"]

FROM runtime-dev-base AS saga-cancellation-dev
COPY --from=builder-dev /tmp/saga-cancellation-server ./server
ENV PORT=50062
EXPOSE 50062
ENTRYPOINT ["./server"]

# =============================================================================
# Release images - Domain Aggregates
# =============================================================================
FROM runtime-release-base AS customer
COPY --from=builder-release /tmp/customer-server ./server
ENV PORT=50055
EXPOSE 50055
ENTRYPOINT ["./server"]

FROM runtime-release-base AS product
COPY --from=builder-release /tmp/product-server ./server
ENV PORT=50053
EXPOSE 50053
ENTRYPOINT ["./server"]

FROM runtime-release-base AS inventory
COPY --from=builder-release /tmp/inventory-server ./server
ENV PORT=50054
EXPOSE 50054
ENTRYPOINT ["./server"]

FROM runtime-release-base AS order
COPY --from=builder-release /tmp/order-server ./server
ENV PORT=50056
EXPOSE 50056
ENTRYPOINT ["./server"]

FROM runtime-release-base AS cart
COPY --from=builder-release /tmp/cart-server ./server
ENV PORT=50057
EXPOSE 50057
ENTRYPOINT ["./server"]

FROM runtime-release-base AS fulfillment
COPY --from=builder-release /tmp/fulfillment-server ./server
ENV PORT=50058
EXPOSE 50058
ENTRYPOINT ["./server"]

# =============================================================================
# Release images - Sagas
# =============================================================================
FROM runtime-release-base AS saga-loyalty-earn
COPY --from=builder-release /tmp/saga-loyalty-earn-server ./server
ENV PORT=50060
EXPOSE 50060
ENTRYPOINT ["./server"]

FROM runtime-release-base AS saga-fulfillment
COPY --from=builder-release /tmp/saga-fulfillment-server ./server
ENV PORT=50061
EXPOSE 50061
ENTRYPOINT ["./server"]

FROM runtime-release-base AS saga-cancellation
COPY --from=builder-release /tmp/saga-cancellation-server ./server
ENV PORT=50062
EXPOSE 50062
ENTRYPOINT ["./server"]
