# Customer Log Projector - Rust gRPC Server

set shell := ["bash", "-c"]

TOP := `git rev-parse --show-toplevel`

# Show available commands
default:
    @just --list

# Build the server
build:
    cargo build -p projector-log-customer --bin projector-log-customer-server

# Build release
build-release:
    cargo build -p projector-log-customer --bin projector-log-customer-server --release

# Run the server
run: build
    cargo run -p projector-log-customer --bin projector-log-customer-server

# Run with custom port
run-port port:
    PORT={{port}} cargo run -p projector-log-customer --bin projector-log-customer-server

# Run tests
test:
    cargo test -p projector-log-customer

# Clean build artifacts
clean:
    cargo clean -p projector-log-customer

# Check code
check:
    cargo check -p projector-log-customer

# Lint code
lint:
    cargo clippy -p projector-log-customer -- -D warnings
