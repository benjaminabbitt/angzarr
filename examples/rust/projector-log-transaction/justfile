# Transaction Log Projector - Rust gRPC Server

set shell := ["bash", "-c"]

TOP := `git rev-parse --show-toplevel`

# Show available commands
default:
    @just --list

# Build the server
build:
    cargo build -p projector-log-transaction --bin projector-log-transaction-server

# Build release
build-release:
    cargo build -p projector-log-transaction --bin projector-log-transaction-server --release

# Run the server
run: build
    cargo run -p projector-log-transaction --bin projector-log-transaction-server

# Run with custom port
run-port port:
    PORT={{port}} cargo run -p projector-log-transaction --bin projector-log-transaction-server

# Run tests
test:
    cargo test -p projector-log-transaction

# Clean build artifacts
clean:
    cargo clean -p projector-log-transaction

# Check code
check:
    cargo check -p projector-log-transaction

# Lint code
lint:
    cargo clippy -p projector-log-transaction -- -D warnings
