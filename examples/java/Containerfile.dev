# Java dev container for running tests
# Build: podman build -t angzarr-dev-java -f examples/java/Containerfile.dev .
# Run:   podman run --rm -v .:/app:Z -w /app/examples/java angzarr-dev-java just test

FROM docker.io/library/eclipse-temurin:21-jdk

RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    ca-certificates \
    maven \
    && rm -rf /var/lib/apt/lists/*

# Install just
RUN curl --proto '=https' --tlsv1.2 -sSf https://just.systems/install.sh | bash -s -- --to /usr/local/bin

WORKDIR /app

WORKDIR /app/examples/java

CMD ["just", "test"]
