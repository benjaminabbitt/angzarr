# Python poker examples - container version
# This file is mounted as 'justfile' inside the container

set shell := ["bash", "-c"]

default:
    @just --list

install:
    pip install uv && uv sync

test-unit:
    pip install uv && uv run pytest -v

test-acceptance:
    pip install uv && uv run behave features/

test: test-unit test-acceptance

fmt:
    pip install uv && uv run black .

lint:
    pip install uv && uv run ruff check .

typecheck:
    pip install uv && uv run mypy . --ignore-missing-imports

run-player:
    pip install uv && cd player/agg && uv run python main.py

run-table:
    pip install uv && cd table/agg && uv run python main.py

run-hand:
    pip install uv && cd hand/agg && uv run python main.py
