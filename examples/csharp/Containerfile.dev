# C# dev container for running tests
# Build: podman build -t angzarr-dev-csharp -f examples/csharp/Containerfile.dev .
# Run:   podman run --rm -v .:/app:Z -w /app/examples/csharp angzarr-dev-csharp just test

FROM mcr.microsoft.com/dotnet/sdk:9.0

RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install just
RUN curl -sSf https://just.systems/install.sh | bash -s -- --to /usr/local/bin

WORKDIR /app

WORKDIR /app/examples/csharp

CMD ["just", "test"]
