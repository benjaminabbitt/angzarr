# Angzarr - container version
# This file is mounted as 'justfile' inside the container

set shell := ["bash", "-c"]

default:
    @just --list

build:
    cargo build

build-release:
    cargo build --release

check:
    cargo check

fmt:
    cargo fmt

lint:
    cargo clippy -- -D warnings

test:
    cargo test --lib

clean:
    cargo clean
