FROM docker.io/library/rust:latest

# Install build tools, just, and podman-remote for testcontainers
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    clang \
    mold \
    cmake \
    pkg-config \
    libssl-dev \
    libsasl2-dev \
    protobuf-compiler \
    libprotobuf-dev \
    podman-remote \
    && rm -rf /var/lib/apt/lists/* \
    && curl --proto '=https' --tlsv1.2 -sSf https://just.systems/install.sh | bash -s -- --to /usr/local/bin \
    && ln -s /usr/bin/podman-remote /usr/bin/docker

# Mark as devcontainer for justfile detection
ENV DEVCONTAINER=true

# Configure testcontainers to use the mounted podman socket
# The socket is mounted at runtime via -v flag
ENV DOCKER_HOST=unix:///run/podman/podman.sock
ENV TESTCONTAINERS_RYUK_DISABLED=true
