# GCP Environment - Example Variables
# Copy this file to terraform.tfvars and fill in your values

project_id     = "your-gcp-project-id"
region         = "us-central1"
environment    = "dev"

# Container image registry
image_registry = "gcr.io/your-gcp-project-id"
image_tag      = "latest"

# Database
database_tier = "db-f1-micro"  # Use db-custom-* for production
database_ha   = false          # Enable for production

# Features
enable_stream   = true
enable_topology = true

# Security - set to true only for development
allow_unauthenticated = false
