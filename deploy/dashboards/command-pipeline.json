{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Command Throughput (req/s)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "fillOpacity": 10, "lineWidth": 2, "stacking": { "mode": "none" } },
          "unit": "reqps"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum(rate(angzarr_command_total[5m])) by (domain, outcome)",
          "legendFormat": "{{domain}} ({{outcome}})",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Command Latency p50/p95/p99",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "fillOpacity": 5, "lineWidth": 2 },
          "unit": "s"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(angzarr_command_duration_bucket[5m])) by (le, domain))",
          "legendFormat": "p50 {{domain}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(angzarr_command_duration_bucket[5m])) by (le, domain))",
          "legendFormat": "p95 {{domain}}",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(angzarr_command_duration_bucket[5m])) by (le, domain))",
          "legendFormat": "p99 {{domain}}",
          "refId": "C"
        }
      ]
    },
    {
      "title": "Command Error Rate",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.01 },
              { "color": "red", "value": 0.05 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "sum(rate(angzarr_command_total{outcome=\"error\"}[5m])) / sum(rate(angzarr_command_total[5m]))",
          "legendFormat": "Error Rate",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Total Commands (last 24h)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "blue", "value": null }]
          }
        }
      },
      "targets": [
        {
          "expr": "sum(increase(angzarr_command_total[24h]))",
          "legendFormat": "Total",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Command Latency Heatmap",
      "type": "heatmap",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "options": {
        "calculate": false,
        "yAxis": { "unit": "s" }
      },
      "targets": [
        {
          "expr": "sum(increase(angzarr_command_duration_bucket[1m])) by (le)",
          "legendFormat": "{{le}}",
          "refId": "A",
          "format": "heatmap"
        }
      ]
    },
    {
      "title": "Commands by Domain",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(increase(angzarr_command_total[1h])) by (domain)",
          "legendFormat": "{{domain}}",
          "refId": "A"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["angzarr", "cqrs", "commands"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Angzarr: Command Pipeline",
  "uid": "angzarr-commands",
  "version": 1
}
