{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Bus Publish Throughput (msg/s)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "fillOpacity": 10, "lineWidth": 2 },
          "unit": "ops"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum(rate(angzarr_bus_publish_total[5m])) by (domain, outcome)",
          "legendFormat": "{{domain}} ({{outcome}})",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Bus Publish Latency p50/p95/p99",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "fillOpacity": 5, "lineWidth": 2 },
          "unit": "s"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(angzarr_bus_publish_duration_bucket[5m])) by (le, domain))",
          "legendFormat": "p50 {{domain}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(angzarr_bus_publish_duration_bucket[5m])) by (le, domain))",
          "legendFormat": "p95 {{domain}}",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(angzarr_bus_publish_duration_bucket[5m])) by (le, domain))",
          "legendFormat": "p99 {{domain}}",
          "refId": "C"
        }
      ]
    },
    {
      "title": "Bus Publish Error Rate",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.01 },
              { "color": "red", "value": 0.05 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "sum(rate(angzarr_bus_publish_total{outcome=\"error\"}[5m])) / sum(rate(angzarr_bus_publish_total[5m]))",
          "legendFormat": "Error Rate",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Total Publishes (last 24h)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "blue", "value": null }]
          }
        }
      },
      "targets": [
        {
          "expr": "sum(increase(angzarr_bus_publish_total[24h]))",
          "legendFormat": "Total",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Publish Latency by Domain",
      "type": "table",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(angzarr_bus_publish_duration_bucket[5m])) by (le, domain))",
          "legendFormat": "p50",
          "refId": "A",
          "format": "table",
          "instant": true
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(angzarr_bus_publish_duration_bucket[5m])) by (le, domain))",
          "legendFormat": "p95",
          "refId": "B",
          "format": "table",
          "instant": true
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(angzarr_bus_publish_duration_bucket[5m])) by (le, domain))",
          "legendFormat": "p99",
          "refId": "C",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "merge",
          "options": {}
        }
      ]
    }
  ],
